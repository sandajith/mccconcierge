<?xml version="1.0"?>
<config>
    <tabs>
        <myconf translate="label">
            <label>Membership</label>
            <sort_order>150</sort_order>
        </myconf>
        <myconfbar translate="label">
            <label>Barcloud</label>
            <sort_order>160</sort_order>
        </myconfbar>
    </tabs>
    
    
    
    <sections>
        <membership translate="label" module="adminhtml">
            <label>Membership Settings</label>
            <tab>myconf</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label comment">
                    <label>General</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                      
                        <threshold translate="membership" >
                            <label>Accept New Membership?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>membership/system_config_source_dropdown_values</source_model>

                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </threshold>
                        
                        <gatewayurl translate="membership" >
                            <label>Gateway URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gatewayurl>
                        
                        <apilogin translate="membership" >
                            <label>API Login ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apilogin>
                        
                        <merchantmail translate="membership" >
                            
                            <label>Merchant E-mail</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </merchantmail>
                        
                        <transkey translate="membership" >
                            <label>Transaction Key</label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transkey> 
                        <ipaddress translate="membership" >
                            <label>Admin IP address</label>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Comma separated ip addresses to view highly secure front end pages in front end</comment>
                        </ipaddress> 
                        <ccchange translate="membership" >
                            <label>Credit card change amount</label>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            
                        </ccchange>                                                                                                                                                                                     		    
                    </fields>
                </general>
            </groups>
        </membership>
        <barcloud translate="label" module="adminhtml">
            <label>Barcloud Settings</label>
            <tab>myconfbar</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label comment">
                    <label>General</label>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                                             
                        <securitytoken translate="barcloud">
                            <label>Barcloud Security Token</label>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </securitytoken> 
                        <barcloudApiUrl translate="barcloud">
                            <label>Barcloud Api Url</label>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </barcloudApiUrl> 
                        <barcloudApiKey translate="barcloud">
                            <label>Barcloud Api Key</label>
                            <sort_order>75</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </barcloudApiKey> 
                          <applicationKey translate="barcloud">
                            <label>Application Key</label>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </applicationKey>
                          <username translate="barcloud">
                            <label>Username</label>
                            <sort_order>81</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </username>
                          <password translate="barcloud">
                            <label>Password</label>
                            <sort_order>82</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </password>
                    </fields>
                </general>
            </groups>
        </barcloud>
    </sections>
</config>