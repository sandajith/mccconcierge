<?php if ($_order): ?>
    <?php
    foreach ($_order->getAllItems() as $_item):

        $ee = $_item['product_id'];
        $dd = Mage::getResourceModel('catalog/product')
                ->getAttributeRawValue($ee, 'product_status', 1);
        $product = Mage::getModel('catalog/product')
                ->setStoreId(1)
                ->setData('product_status', $dd);
        $text = $product->getAttributeText('product_status');



        if (($text == 'You Have It') ) {
            ?>
            <h4 style="font-family: 'Lato', sans-serif;">Articles to Pick Up</h4>

        <?php } else if (($text == 'We Have It')) { ?>
            <h4 style="font-family: 'Lato', sans-serif;">Articles to Deliver</h4>

