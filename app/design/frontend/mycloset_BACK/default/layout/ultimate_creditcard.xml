<layout>
    
    <ultimate_creditcard_customer_index translate="label" module="ultimate_creditcard">
        <label>Customers list</label>
        <update handle="page_one_column" />
        <reference name="content">
            <block type="ultimate_creditcard/customer_list" name="customer_list" template="ultimate_creditcard/customer/list.phtml" />
        </reference>
    </ultimate_creditcard_customer_index>
    <ultimate_creditcard_customer_view translate="label" module="ultimate_creditcard">
        <label>Customer view page</label>
        <update handle="page_one_column" />
        <reference name="content">
            <block type="ultimate_creditcard/customer_view" name="customer_view" template="ultimate_creditcard/customer/view.phtml" />
        </reference>
    </ultimate_creditcard_customer_view>
</layout>
